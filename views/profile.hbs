{{> layout}}
{{#*inline "content"}}
    <div class="timeline">
      <div class="followings half">
        <h2>팔로잉 목록</h2>
        {{#if user.Followings}}
          {{!-- {% for following in user.Followings %} --}}
          {{#each user.Followings}}
            <div>{{this.nick}}</div>
          {{/each}}
        {{/if}}
      </div>
      <div class="followers half">
        <h2>팔로워 목록</h2>
        {{#if user.Followers }}
          {{#each user.Followers }}
            <div>{{this.nick}}</div>
          {{/each}}
        {{/if}}
      </div>
    </div>
{{/inline}}
